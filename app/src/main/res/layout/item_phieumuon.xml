<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phiếu mượn: "
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/MaPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="PM01"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"/>
            <TextView
                android:id="@+id/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Sách: "
                android:textSize="20sp"
                android:layout_below="@+id/ma"/>
            <TextView
                android:id="@+id/TSPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Truyện Naruto"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/ma"/>
            <TextView
                android:id="@+id/matv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên: "
                android:textSize="20sp"
                android:layout_below="@+id/ten"/>
            <TextView
                android:id="@+id/TenPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Lương Hữu Nhất"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/ten"/>
            <TextView
                android:id="@+id/matt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Lượng: "
                android:textSize="20sp"
                android:layout_below="@+id/matv"/>
            <TextView
                android:id="@+id/SLPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="01"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/matv"/>
            <TextView
                android:id="@+id/ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Thuê: "
                android:textSize="20sp"
                android:layout_below="@+id/matt"/>
            <TextView
                android:id="@+id/NgaythuePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="20/09/2023"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/matt"/>

            <ImageView
                android:id="@+id/deletePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_below="@+id/ngay"
                android:layout_marginStart="150dp"/>

            <ImageView
                android:id="@+id/updatePM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_below="@+id/ngay"
                android:layout_toEndOf="@+id/deletePM"/>
         </RelativeLayout>
      </androidx.cardview.widget.CardView>

   </LinearLayout>
</RelativeLayout>