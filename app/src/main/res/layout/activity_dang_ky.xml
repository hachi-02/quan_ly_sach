<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFFFF"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="170dp"
        android:text="SIGN UP"
        android:textColor="#484995"
        android:textSize="50sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_user_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cr20bffefefef"
        android:paddingTop="16dp"
        android:paddingBottom="3dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="54dp"
        android:hint="username"
        android:padding="16dp"
        />

    <EditText
        android:id="@+id/edt_pass_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cr15bffefefef"
        android:paddingTop="16dp"
        android:paddingBottom="3dp"
        android:layout_marginBottom="23dp"
        android:layout_marginHorizontal="54dp"
        android:hint="password"
        android:padding="16dp"/>
    <EditText
        android:id="@+id/edt_confirmpass_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cr15bffefefef"
        android:paddingTop="16dp"
        android:paddingBottom="3dp"
        android:layout_marginBottom="23dp"
        android:layout_marginHorizontal="54dp"
        android:hint="confirm password"
        android:padding="16dp"/>

    <Button
        android:id="@+id/bt_signup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="54dp"
        android:background="@drawable/sign_up"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Sign Up"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="7dp"
        android:text="Back"
        android:textSize="19dp" />

</LinearLayout>
