<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:id="@+id/doanhthu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng danh thu trong tháng: "
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/doanhthu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000000VNĐ"
        android:layout_toEndOf="@+id/doanhthu1"
        android:textSize="20sp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Tính doanh thu từ ngày đến ngày"
        android:layout_below="@+id/doanhthu1"/>
    <TextView
        android:id="@+id/ngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ ngày"
        android:textSize="20sp"
        android:layout_below="@+id/tinh"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/nhapngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="1/9/2023"
        android:layout_below="@+id/tinh"
        android:layout_toEndOf="@id/ngay"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/ngaykt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đến ngày"
        android:textSize="20sp"
        android:layout_below="@+id/ngay"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/nhapngaykt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="20/9/2023"
        android:layout_below="@+id/ngay"
        android:layout_toEndOf="@id/ngaykt"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/ketqua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng doanh thu"
        android:textSize="20sp"
        android:layout_below="@+id/ngaykt"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="800000VNĐ"
        android:layout_below="@id/ngaykt"
        android:layout_toEndOf="@id/ketqua"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
</RelativeLayout>