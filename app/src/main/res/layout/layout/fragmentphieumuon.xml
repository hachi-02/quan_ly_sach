<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phiếu mượn: "
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/mao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="PM01"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"/>
            <TextView
                android:id="@+id/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sách: "
                android:textSize="20sp"
                android:layout_below="@+id/ma"/>
            <TextView
                android:id="@+id/ten01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="01"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/ma"/>
            <TextView
                android:id="@+id/matv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã thành viên: "
                android:textSize="20sp"
                android:layout_below="@+id/ten"/>
            <TextView
                android:id="@+id/matv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="01"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/ten"/>
            <TextView
                android:id="@+id/matt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã thủ thư: "
                android:textSize="20sp"
                android:layout_below="@+id/matv"/>
            <TextView
                android:id="@+id/matt01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="01"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/matv"/>
            <TextView
                android:id="@+id/tien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thuê: "
                android:textSize="20sp"
                android:layout_below="@+id/matt"/>
            <TextView
                android:id="@+id/tien01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="10000VNĐ"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/matt"/>
            <TextView
                android:id="@+id/ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày trả: "
                android:textSize="20sp"
                android:layout_below="@+id/tien"/>
            <TextView
                android:id="@+id/ngay01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="20/09/2023"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ma"
                android:layout_below="@+id/tien"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_below="@+id/ngay"
                android:layout_marginStart="150dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_below="@+id/ngay"
                android:layout_toEndOf="@+id/delete"/>
         </RelativeLayout>
      </androidx.cardview.widget.CardView>

   </LinearLayout>
   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/add"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="10dp"
       android:layout_marginBottom="20dp"
       android:src="@drawable/ic_add" />
</RelativeLayout>